<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/navbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/bg_room"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="17dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Hello Quyen"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Welcome to Smart Home"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="205dp"
                android:background="@drawable/curved_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Figures"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:paddingLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/crdHome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FFF8DC"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="130dp"
                                        android:layout_height="45dp"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="20dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/thermometer" />

                                        <TextView
                                            android:id="@+id/txtTemperature"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="32.90 "
                                            android:textStyle="bold"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" Â°C"
                                            android:textSize="13sp" />
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:paddingLeft="30dp"
                                        android:textStyle="bold"
                                        android:text="Temperature"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ProgressBar
                                        android:id="@+id/prgTemperature"
                                        android:layout_width="170dp"
                                        android:layout_height="11dp"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:max="60"
                                        android:progress="32"
                                        android:layout_marginLeft="5dp"
                                        android:progressDrawable="@drawable/progress_bar_temp"/>

                                    <TextView
                                        android:id="@+id/txtStateTemp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:text="Normal"/>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="130dp"
                                        android:layout_height="45dp"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="20dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/humidity" />

                                        <TextView
                                            android:id="@+id/txtHumidity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:text="50 "
                                            android:textStyle="bold"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" %"
                                            android:textSize="13sp" />
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:paddingLeft="30dp"
                                        android:textStyle="bold"
                                        android:text="Humidity"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ProgressBar
                                        android:id="@+id/prgHumidity"
                                        android:layout_width="170dp"
                                        android:layout_height="11dp"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:max="100"
                                        android:progress="32"
                                        android:layout_marginLeft="5dp"
                                        android:progressDrawable="@drawable/progress_bar_humid" />

                                    <TextView
                                        android:id="@+id/txtStateHumid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:text="Normal"/>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="130dp"
                                        android:layout_height="45dp"
                                        android:orientation="horizontal"
                                        android:layout_marginLeft="20dp"
                                        android:gravity="center_vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/sunny" />

                                        <TextView
                                            android:id="@+id/txtLight"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="3dp"
                                            android:text="100.00 "
                                            android:textStyle="bold"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text=" lux"
                                            android:textSize="13sp" />
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:paddingLeft="30dp"
                                        android:textStyle="bold"
                                        android:text="Light"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ProgressBar
                                        android:id="@+id/prgLight"
                                        android:layout_width="170dp"
                                        android:layout_height="11dp"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:max="500"
                                        android:progress="32"
                                        android:layout_marginLeft="5dp"
                                        android:progressDrawable="@drawable/progress_bar_light" />

                                    <TextView
                                        android:id="@+id/txtStateLight"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:text="Normal"/>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analysis"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:paddingLeft="20dp"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/crdLineChart"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="12dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Devices"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingLeft="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/crdFan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp"
                                    app:cardMaxElevation="12dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/imgFan"
                                                android:layout_width="80dp"
                                                android:layout_height="70dp"
                                                android:src="@drawable/fan" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:text="Fan"
                                                android:textSize="18sp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>

                                        <Switch
                                            android:id="@+id/switch_fan"
                                            android:layout_width="wrap_content"
                                            android:layout_height="48dp"
                                            android:layout_marginLeft="10dp"
                                            android:padding="10dp" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/crdLight"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp"
                                    app:cardMaxElevation="12dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="vertical">
                                            <ImageView
                                                android:id="@+id/imgLight"
                                                android:layout_width="80dp"
                                                android:layout_height="70dp"
                                                android:src="@drawable/light_off" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:text="Light"
                                                android:textSize="18sp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>

                                        <Switch
                                            android:id="@+id/switch_light"
                                            android:layout_width="wrap_content"
                                            android:layout_height="48dp"
                                            android:layout_marginLeft="10dp"
                                            android:padding="10dp" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/crdConditioner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:layout_alignEnd="@+id/crdFan"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="10dp"
                                    app:cardMaxElevation="12dp"
                                    app:cardPreventCornerOverlap="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="vertical">

                                            <ImageView
                                                android:id="@+id/imgConditioner"
                                                android:layout_width="80dp"
                                                android:layout_height="70dp"
                                                android:src="@drawable/conditioner" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:gravity="center_horizontal"
                                                android:text="Conditioner"
                                                android:textSize="18sp"
                                                android:textStyle="bold"/>
                                        </LinearLayout>

                                        <Switch
                                            android:id="@+id/switch_conditioner"
                                            android:layout_width="wrap_content"
                                            android:layout_height="48dp"
                                            android:layout_marginLeft="10dp"
                                            android:padding="10dp" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <include layout="@layout/navbar"/>
</RelativeLayout>